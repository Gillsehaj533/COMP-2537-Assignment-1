<%- include('templates/header', { title: "Sign Up", user: user }) %>

<h1>Sign Up</h1>

<% if (error) { %>
  <div class="alert alert-danger"><%= error %></div>
<% } %>

<form method="POST" action="/signup" class="w-50 mx-auto">
  <div class="mb-3">
    <label>Name</label>
    <input name="name" class="form-control" placeholder="0-20 characters" required>
  </div>
  <div class="mb-3">
    <label>Email</label>
    <input name="email" type="email" class="form-control" required>
  </div>
  <div class="mb-3">
    <label>Password</label>
    <input name="password" type="password" class="form-control" placeholder="6-20 characters" required>
  </div>
  <button type="submit" class="btn btn-success">Register</button>
</form>

<%- include('templates/footer') %>
